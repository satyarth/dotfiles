super + z
	amixer -c 0 set Master 1dB- && ~/dotfiles/scripts/popups/./volume.sh | ~/dotfiles/scripts/./popup.sh

super + a
	amixer -c 0 set Master 1dB+ && ~/dotfiles/scripts/popups/./volume.sh | ~/dotfiles/scripts/./popup.sh

super+shift + z
	mpc volume -3

super+shift + a
	mpc volume +3

super+shift + x
	xbacklight -5 && xbacklight | ~/dotfiles/scripts/./popup.sh

super+shift + s
	xbacklight +6 && xbacklight | ~/dotfiles/scripts/./popup.sh

super + x
	mpc toggle && mpc | head -n1 | ~/dotfiles/scripts/./popup.sh

super + s
	mpc prev && mpc | head -n1 | ~/dotfiles/scripts/./popup.sh

super + d
	mpc next && mpc | head -n1 | ~/dotfiles/scripts/./popup.sh

super + t
	urxvt

super + c
	~/dotfiles/scripts/popups/info.sh

super + w
	~/dotfiles/scripts/./scrot.sh && echo "Screenshot taken!" | ~/dotfiles/scripts/./popup.sh

super+shift + w
	~/dotfiles/scripts/./randomwall.sh

super + z
	amixer -c 0 set Master 1dB- && ~/dotfiles/scripts/popups/./volume.sh | ~/dotfiles/scripts/./dzen-popup.sh

super + a
	amixer -c 0 set Master 1dB+ && ~/dotfiles/scripts/popups/./volume.sh | ~/dotfiles/scripts/./dzen-popup.sh

super+shift + z
	mpc volume -3

super+shift + a
	mpc volume +3

super + x
	mpc toggle && ~/dotfiles/scripts/popups/./mpd.sh
	
super + s
	mpc prev && ~/dotfiles/scripts/popups/./mpd.sh

super + d
	mpc next && ~/dotfiles/scripts/popups/./mpd.sh

super + t
	rxvt-unicode

super + c
	~/.panel/dzen.sh

super + w
	/home/satyarth/.scripts/./scrot.sh

super+shift + w
	bash /home/satyarth/.scripts/randomwall.sh
